# üèà COLLEGE FANTASY FOOTBALL 2025 - ENVIRONMENT CONFIGURATION

# Server Configuration
PORT=3001
NODE_ENV=development

# Security (CHANGE IN PRODUCTION!)
JWT_SECRET=college_fantasy_football_super_secret_jwt_key_2025_change_in_production

# Database
DB_PATH=./data/fantasy_football.db

# AI Features (Optional - platform works without these)
OPENAI_API_KEY=your_openai_api_key_here_optional

# External APIs (Optional - for real data integration)
ESPN_API_KEY=your_espn_api_key_here_optional
COLLEGE_FOOTBALL_DATA_API_KEY=your_cfb_data_api_key_here_optional

# CORS Configuration  
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:5500,https://saveeverykid.github.io

# Email Notifications (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here

# Redis (Optional - for production scaling)
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_REAL_TIME_SCORING=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_PUSH_NOTIFICATIONS=true

# Development Settings
DEBUG_MODE=true
MOCK_PLAYER_UPDATES=true

# Production Settings (uncomment for production)
# NODE_ENV=production
# JWT_SECRET=your_extremely_secure_production_jwt_secret_here_minimum_32_characters
# DB_PATH=/var/data/fantasy_football.db
# ENABLE_EMAIL_NOTIFICATIONS=true
# DEBUG_MODE=false
# MOCK_PLAYER_UPDATES=false

